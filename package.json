{
  "name": "@auroradao/datastream-client-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AuroraDao/datastream-client-js.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm-run-all lint -p build:*",
    "build:packages": "tsc -b packages/datastream-types packages/datastream-client packages/datastream-connection packages/datastream-connector-ws packages/datastream-connector-uws packages/datastream-connector-web",
    "clean": "rimraf packages/**/lib",
    "lint": "eslint --ext .ts ./packages/**/src/**",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:hoist": "lerna link convert",
    "lerna:publish:alpha": "cross-env HUSKY_BYPASS=true lerna publish",
    "lerna:publish:beta": "cross-env HUSKY_BYPASS=true lerna publish --preid beta --dist-tag next",
    "lerna:publish:release": "cross-env HUSKY_BYPASS=true lerna publish",
    "publish:release": "npm-run-all clean build lerna:publish:release",
    "publish:alpha": "npm-run-all clean build lerna:publish:alpha",
    "publish:beta": "npm-run-all clean build lerna:publish:beta",
    "test:quick": "npm-run-all build:all test:quick:run",
    "test:quick:run": "ts-node-dev --respawn tests/quick.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.13.1",
    "lerna-changelog": "^0.8.2",
    "npm-run-all": "^4.1.5",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "datastream-client": "file:packages/datastream-client"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
